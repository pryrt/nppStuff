<NotepadPlus>
    <functionList>
        <parser displayName="Markdown (preinstalled)"
                id="Markdown (preinstalled)"
                commentExpr="">
            <function mainExpr="(?x-s)(^\h*\K[#]+\h*(.*?)$|^(.*)(?=[\r\n]+^([-=])\4{2,}\h*$))"/>
        </parser>
    </functionList>
</NotepadPlus>
